<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeCatalog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RecipeCatalog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Button Styles -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorInactiveIcon</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="CustomButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="CustomTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Input Styles -->
    <style name="ProfileFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorHintLight</item>
        <item name="hintTextColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHintLight</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Section Header Style -->
    <style name="SectionHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Avatar Style -->
    <style name="AvatarImage">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Divider Style -->
    <style name="SectionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorHintLight</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Card Style -->
    <style name="ProfileCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="RecipeCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="DietaryChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Caption</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
</resources>